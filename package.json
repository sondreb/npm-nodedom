{
  "name": "npm-nodedom",
  "version": "1.0.0",
  "description": "Repo that shows loading issue with script tasks in npm in combination with nodedom.",
  "main": "index.js",
  "scripts": {
	  
   	"build-css": "stylus -u nib -p source/styles/main.styl > source/build/main.css",
    "build-css-min": "stylus -u nib -c -p source/styles/main.styl > source/build/main.min.css",
    "build-js": "browserify source/scripts/app.js -o source/build/app.js",
    "build-js-min": "browserify source/scripts/app.js | uglifyjs -o source/build/app.min.js",
    
	"watch-css": "nodemon -w public/styles -x npm run build-css",
    "watch-js": "nodemon -w public/scripts -x npm run build-js", 
	"watch-server": "nodemon --ignore public server.js",	 
	"watch": "npm run watch-js & npm run watch-css",  
    "build": "npm run build-js & npm run build-css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sondreb/npm-nodedom.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sondreb/npm-nodedom/issues"
  },
  "homepage": "https://github.com/sondreb/npm-nodedom",
   "dependencies": {
    "async": "^0.9.0",
    "babelify": "^5.0.4",
    "body-parser": "^1.9.0",
    "colors": "^1.0.2",
    "cors": "^2.4.2",
    "envify": "^3.4.0",
    "express": "^4.9.5",
    "method-override": "^2.2.0",
    "moment": "^2.8.3",
    "morgan": "^1.3.2",
    "node-logentries": "^0.1.4",
    "react": "^0.13.1",
    "respawn": "^1.0.1"
  },
  "devDependencies": {
    "browserify": "^9.0.7",
    "clean-css": "^3.1.9",
    "nib": "*",
    "stylus": "^0.50.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.1.0"
  }
}
